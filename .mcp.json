{
  "mcpServers": {
    "everything": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-everything"],
      "env": {
        "DEBUG": "${DEBUG:-false}"
      }
    },
    "example-server": {
      "command": "node",
      "args": ["./servers/example-server/dist/index.js"],
      "env": {
        "DEBUG": "${DEBUG:-false}",
        "LOG_LEVEL": "${LOG_LEVEL:-info}"
      }
    },
    "memory": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-memory"],
      "env": {
        "MEMORY_FILE_PATH": "./project-memory.json",
        "DEBUG": "${DEBUG:-false}"
      }
    },
    "filesystem": {
      "command": "node", 
      "args": ["./servers/filesystem/dist/index.js", "${PROJECT_ROOT:-.}"],
      "env": {
        "ALLOWED_EXTENSIONS": ".ts,.js,.json,.md,.txt",
        "MAX_FILE_SIZE": "${MAX_FILE_SIZE:-10485760}"
      }
    },
    "git": {
      "command": "/Users/danielrowe/.local/bin/uvx",
      "args": ["mcp-server-git"],
      "env": {
        "DEBUG": "${DEBUG:-false}"
      }
    },
    "time": {
      "command": "/Users/danielrowe/.local/bin/uvx",
      "args": ["mcp-server-time"],
      "env": {
        "DEBUG": "${DEBUG:-false}"
      }
    },
    "github": {
      "type": "http",
      "url": "https://api.githubcopilot.com/mcp/",
      "headers": {
        "Authorization": "Bearer ${GITHUB_TOKEN}"
      }
    }
  }
}