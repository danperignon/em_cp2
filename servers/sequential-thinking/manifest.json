{
  "name": "sequential-thinking",
  "version": "2.0.0",
  "description": "Advanced cognitive reasoning server with 6 decomposition strategies and pattern learning",
  "server": {
    "command": "node",
    "args": ["dist/index.js"]
  },
  "capabilities": {
    "tools": [
      "decompose_problem"
    ],
    "resources": [
      "thinking://current_state",
      "thinking://pattern_library", 
      "thinking://quality_metrics"
    ],
    "prompts": [
      "analyze_problem_structure",
      "generate_solution_strategy",
      "validate_reasoning_chain"
    ]
  },
  "userConfig": {
    "thinking_mode": {
      "type": "string",
      "description": "Reasoning mode for problem decomposition",
      "required": false,
      "default": "adaptive",
      "options": ["adaptive", "analytical", "creative", "systematic"]
    },
    "max_reasoning_depth": {
      "type": "number",
      "description": "Maximum depth for problem decomposition",
      "required": false,
      "default": 5,
      "min": 1,
      "max": 10
    },
    "pattern_learning": {
      "type": "boolean",
      "description": "Enable pattern learning and adaptation",
      "required": false,
      "default": true
    },
    "debug_mode": {
      "type": "boolean",
      "description": "Enable detailed debug logging",
      "required": false,
      "default": false
    },
    "quality_threshold": {
      "type": "number",
      "description": "Minimum quality threshold for solution acceptance",
      "required": false,
      "default": 0.7,
      "min": 0.0,
      "max": 1.0
    }
  },
  "integrations": {
    "memory": {
      "description": "Stores reasoning patterns and successful decomposition strategies",
      "optional": true
    },
    "filesystem": {
      "description": "Generates reasoning artifacts and solution documents",
      "optional": true
    },
    "git": {
      "description": "Version control for reasoning processes and solution evolution",
      "optional": true
    }
  }
}