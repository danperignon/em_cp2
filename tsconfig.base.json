{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "lib": ["ES2022"],
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "allowJs": false,
    "noEmit": false,
    "incremental": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "paths": {
      "@em-cp2/core": ["./packages/core/src/index.ts"],
      "@em-cp2/shared": ["./packages/shared/src/index.ts"],
      "@em-cp2/types": ["./packages/types/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "dist", "build", ".turbo"]
}